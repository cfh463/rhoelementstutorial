<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @productcatalog.Name %></h1>
    <a href="<%= url_for :action => :show, :id => @productcatalog.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @productcatalog.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @productcatalog.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="productcatalog[Name]" class="fieldLabel">Name</label>
            <input type="text" id="productcatalog[Name]" name="productcatalog[Name]" value="<%= @productcatalog.Name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="productcatalog[SKU]" class="fieldLabel">Sku</label>
            <input type="text" id="productcatalog[SKU]" name="productcatalog[SKU]" value="<%= @productcatalog.SKU %>" <%= placeholder( "Sku" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="productcatalog[Image]" class="fieldLabel">Image</label>
            <input type="text" id="productcatalog[Image]" name="productcatalog[Image]" value="<%= @productcatalog.Image %>" <%= placeholder( "Image" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
