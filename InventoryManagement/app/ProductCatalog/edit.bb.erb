<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @productcatalog.object %>
    <h1>Edit <%= @productcatalog.Name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @productcatalog.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @productcatalog.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="productcatalog[Name]" value="<%= @productcatalog.Name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Sku: </td>
              <td class="itemValue"><input type="text" name="productcatalog[SKU]" value="<%= @productcatalog.SKU %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Image: </td>
              <td class="itemValue"><input type="text" name="productcatalog[Image]" value="<%= @productcatalog.Image %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
